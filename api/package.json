{
  "name": "trivia-tracks-api",
  "version": "1.0.0",
  "description": "REST API for TriviaTracks",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rimraf dist/ && babel ./ --out-dir dist/ --ignore ./node_modules,./babelrc,./package.json,./npm-debug.log --copy-files",
    "start": "npm run build && node dist/server.js",
    "lint": "eslint --ext .js .",
    "watch": "nodemon --exec npm start"
  },
  "author": "Mike Yates <mike@yatesdev.com>",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.7.0",
    "nodemon": "^1.12.1",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "jsonwebtoken": "^8.1.0",
    "mongoose": "^4.13.0",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.1"
  },
  "eslintConfig": {
    "env": {
        "browser": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parser": "babel-eslint",
    "rules": {
      "arrow-parens": 0,
      "no-underscore-dangle": 0
    }
  },
  "nodemonConfig": {
    "ignore": [
      "*.spec.js",
      "dist"
    ]
  }
}
